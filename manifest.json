{
    "manifest_version": 3,
    "name": "ICM BriefMe",
    "description": "Provides a brief summary of the current page, and some ICM enhancements.",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
          "js": [
            "scripts/content.js"
          ],
          "matches": [
            "https://portal.microsofticm.com/imp/v3/incidents/*"
          ],
          "run_at": "document_end"
        }
    ],
    "content_security_policy": 
    {
      "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://briefmefunc.azurewebsites.net/api/HttpTriggerBriefMe;"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage",
        "identity"
    ],
    "host_permissions": [
        "https://portal.microsofticm.com/imp/v3/incidents/*",
        "https://briefmefunc.azurewebsites.net/api/HttpTriggerBriefMe"
    ],
    "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+B",
            "mac": "Command+B"
          }
        }
    }
}